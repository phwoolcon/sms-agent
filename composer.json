{
    "name": "phwoolcon/sms-agent",
    "type": "library",
    "description": "SMS Sending Agent",
    "keywords": [
        "phwoolcon",
        "sms-agent"
    ],
    "homepage": "https://github.com/phwoolcon/sms-agent",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Christopher CHEN",
            "email": "fishdrowned@gmail.com",
            "homepage": "https://github.com/Fishdrowned",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "phwoolcon": "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Phwoolcon\\SmsAgent\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phwoolcon\\SmsAgent\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
